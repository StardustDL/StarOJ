@page "/"
@inherits BasePage

<div style="background-image: url(@OJOptions.Cover); background-size: 100% 100%; margin-bottom: 0;">
    <Row Align="middle" Justify="center" Style="height: 100vh;">
        <Space Style="background-color: #f0f8ff96; border-radius: 20px; padding: 42px 49px;" Size="@($"{100}")">
            <SpaceItem>
                <img src="@OJOptions.Icon" class="img-fluid mx-auto" style="border-radius: 20px; max-height: 256px; max-width: 256px;" />
            </SpaceItem>
            <SpaceItem>
                <Space Direction="vertical">
                    <SpaceItem>
                        <h1 class="display-4 text-center">@OJOptions.Name</h1>
                    </SpaceItem>
                    <SpaceItem>
                        <Divider></Divider>
                    </SpaceItem>
                    <SpaceItem>
                        <Space>
                            <SpaceItem>
                                <AntDesign.Button Size="@ButtonSize.Large"
                                        OnClick="@(e=>NavigationManager.NavigateTo("problems"))">
                                    <MdiIcon Type="format-list-bulleted-square" />
                                    <a href="problems">Problems</a>
                                </AntDesign.Button>
                            </SpaceItem>
                            <SpaceItem>
                                <AntDesign.Button Size="@ButtonSize.Large"
                                        OnClick="@(e=>NavigationManager.NavigateTo("submissions"))">
                                    <MdiIcon Type="tray-full" />
                                    <a href="submissions">Submissions</a>
                                </AntDesign.Button>
                            </SpaceItem>
                        </Space>
                    </SpaceItem>
                </Space>
            </SpaceItem>
        </Space>
    </Row>
</div>

